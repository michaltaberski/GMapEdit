%a.drop{:href => '#'}
  - if @polygon.name.blank?
    Nowa powierzchnia
  - else
    = "#{@polygon.name} (powierzchnia)"
.dropdown_3columns.align_right
  .col_3
    = semantic_form_for  @polygon do |f|
      = f.inputs do
        = f.input :name
        = f.input :description
        = f.input :data, :as => :hidden
        = f.input :surface, :as => :hidden
        %li
          #surface
            %b Powierzchnia:
            0 km2
      = f.buttons do
        = f.commit_button :label => 'Zapisz '
        %li.align_right
          = link_to 'Anuluj', nil, :id => 'cancel'
        %li.align_right
          = link_to 'UsuÅ„', @polygon, { :id => 'delete'} if @polygon.id

